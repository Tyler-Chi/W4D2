<form action="<%= cat_url(@cat) %>" method="post">
   <input type="hidden" name="_method" value="PATCH">



  <label for="name">Name:</label>
  <input id = "name" type="text" name="cat[name]" value = "<%= @cat.name %>">

  <br>

  <label for="sex">Sex:</label>
  <input type="radio" name="gender" value="M" <%= @cat.sex == "M" ? "checked" : ""%>> Male
  <input type="radio" name="gender" value="F" <%= @cat.sex == "F" ? "checked" : ""%>> Female

  <br>


<label for="color">Color:</label>
 <select>
   <option disabled selected = "selected" > Please Select </option>
   <option value="Brown" selected = <%= @cat.color == "Brown" ? "selected" : ""%>>Brown</option>
      <option value="Black" selected=<%= @cat.color == "Black" ? "selected" : ""%>>black</option>
 </select>

 <br>

<label for="birth_date">Cat's Birthday:</label>
<input id="date" type="date" value = "<%= @cat.birth_date %>">

<br>


<label for="description"> Cat Description: </label>
<br>
<textarea rows = "4" cols = "50">
<%=  @cat.description %>
</textarea>




  <input type="submit" value="add cat">
</form>
